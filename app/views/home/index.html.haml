.min-h-screen.bg-gradient-to-br.from-blue-50.to-indigo-100
  .max-w-7xl.mx-auto.px-4.sm:px-6.lg:px-8.py-12
    .text-center
      %h1.text-4xl.font-bold.text-gray-900.sm:text-5xl.md:text-6xl
        Organization-Based
        %span.text-blue-600 Access Control
      
      %p.mt-3.max-w-md.mx-auto.text-base.text-gray-500.sm:text-lg.md:mt-5.md:text-xl.md:max-w-3xl
        A modern platform for managing organizational membership, age-based participation, 
        and role-based access control with comprehensive analytics.

      - unless current_user
        .mt-5.max-w-md.mx-auto.sm:flex.sm:justify-center.md:mt-8
          .rounded-md.shadow
            = link_to signup_path, 
                      class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10 transition duration-200" do
              Get Started
          .mt-3.rounded-md.shadow.sm:mt-0.sm:ml-3
            = link_to login_path, 
                      class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-blue-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10 transition duration-200" do
              Sign In

    - if current_user
      .mt-12.bg-white.shadow.rounded-lg.p-6
        %h2.text-2xl.font-bold.text-gray-900.mb-4
          Welcome back, #{current_user.first_name}! ðŸ‘‹
        
        .grid.md:grid-cols-2.gap-6
          .div
            %h3.text-lg.font-medium.text-gray-900.mb-2 Your Profile
            %p.text-gray-600
              Name: #{current_user.full_name}
            %p.text-gray-600  
              Email: #{current_user.email}
            %p.text-gray-600
              Age: #{current_user.age} years old
            %p.text-gray-600
              Age Group: 
              %span.px-2.py-1.bg-blue-100.text-blue-800.rounded-full.text-sm
                #{current_user.age_group.capitalize}

          .div
            %h3.text-lg.font-medium.text-gray-900.mb-2 Quick Actions
            .space-y-2
              = link_to "View Profile", profile_path, 
                        class: "block text-blue-600 hover:text-blue-700"
              = link_to "Browse Organizations", "#", 
                        class: "block text-blue-600 hover:text-blue-700"
              = link_to "Participation Spaces", "#", 
                        class: "block text-blue-600 hover:text-blue-700"

